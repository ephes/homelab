[Unit]
Description=Update Gandi DNS for {{ ddns_subdomain }}.{{ ddns_domain }}
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User={{ username }}
WorkingDirectory={{ site_path }}
EnvironmentFile={{ ddns_config_dir }}/gandi.env
ExecStart={{ ddns_script_path }}
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=false
ReadWritePaths={{ ddns_log_dir }}