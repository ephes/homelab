# Contents of /etc/systemd/system/multi-user.target.wants/{{ username }}.service
[Unit]
Description={{ username }} web application
After=network.target

[Service]
Type=simple
Restart=always
WorkingDirectory={{ site_path }}
User={{ username }}
Environment="DJANGO_SETTINGS_MODULE={{ django_settings_module }}"
EnvironmentFile={{ site_path }}/.env
ExecStart={{ uv_path }} run granian --workers {{ granian_number_of_workers }} --interface wsgi --host 0.0.0.0 --port {{ app_port }} --access-log src.config.wsgi:application

[Install]
WantedBy=multi-user.target